<Window x:Class="DataBinding.PersonView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PersonView" Height="350" Width="525"
        xmlns:local="clr-namespace:DataBinding">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding PersonGender}" 
                 Background="{Binding PersonGender, Converter={local:GenderToColor}}"
                 Grid.Row="0"/>                
        
        <Button Command="{Binding DoItCommand}" Grid.Row="1">...</Button>
    </Grid>
</Window>
